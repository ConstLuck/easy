{
  "name": "@thisisagile/easy-test-react",
  "version": "0.1.0",
  "description": "Straightforward wrapper library for testing-library/react",
  "author": "Sander Hoogendoorn",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index",
  "repository": {
    "type": "git",
    "url": "git@github.com:thisisagile/easy.git"
  },
  "keywords": [
    "typescript",
    "microservices",
    "domain-driven-design",
    "evolutionary-architecture",
    "jest",
    "unit testing"
  ],
  "scripts": {
    "lint": "yarn g:eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "yarn g:prettier --check --write src test *.json",
    "build": "yarn g:tsc",
    "test": "yarn g:jest --coverage",
    "prepack": "yarn build && yarn g:copy-readme"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "weak-napi": "^2.0.2"
  },
  "dependencies": {
    "@testing-library/dom": "8.1.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@thisisagile/easy": "workspace:*",
    "@thisisagile/easy-test": "workspace:*",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/react": "17.0.14",
    "jest": "^27.0.3",
    "jest-junit": "^12.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.0.2"
  },
  "engines": {
    "node": ">=v14.16.0",
    "npm": ">=7.7.6"
  }
}
